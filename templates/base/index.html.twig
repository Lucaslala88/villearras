{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Accueil{% endblock %}
{% block body %}
    <div class="container-fluid"></div>
    <div class="text-center text-primary" style="font-size: 70px;"> Ville d'Arras </div>
    <img src="images/villearras.png" class="img-fluid rounded mx-auto d-block" width="1080" alt="Responsive image">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">message</th>
                            <th scope="col">nombre</th>
                            <th scope="col">Date d'envoi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for avis in avis %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ avis.nom | slice(0,1) | capitalize }}</td>
                                <td>{{ avis.prenom | capitalize }}</td>
                                <td>{{ avis.message | lower }}</td>
                                <td>{{ avis.nombre | lower }}</td>
                                <td>{{ avis.dateEnvoi | date("d-m-Y Ã  H:i:s") }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}