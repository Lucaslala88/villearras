{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste de cantine{% endblock %}

{% block body %}
<div class="container-fluid"></div>
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> Liste des réservations de la cantine</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Repas</th>
                            <th scope="col">NomDeLecole</th>
                            <th scope="col">Date d'envoi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cantine in cantines %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ cantine.nom | capitalize }}</td>
                                <td>{{ cantine.prenom | capitalize }}</td>
                                <td>{{ cantine.email | lower }}</td>
                                <td>{{ cantine.repas | date("d-m-Y à H:i:s") }}</td>
                                <td>{{ cantine.nomdelecole | lower }}</td>
                                <td>{{ cantine.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}