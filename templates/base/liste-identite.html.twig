{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des cartes d'identités{% endblock %}

{% block body %}
<div style="background-image: url(images/villearras.png);">
<div class="container-fluid"></div>
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> Liste des cartes d'identités</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Naissance</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Lieu</th>
                            <th scope="col">Date d'envoi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for identite in identites %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ identite.nom | capitalize }}</td>
                                <td>{{ identite.prenom | capitalize }}</td>
                                <td>{{ identite.email | lower }}</td>
                                <td>{{ identite.naissance | date("d-m-Y à H:i:s") }}</td>
                                <td>{{ identite.adresse | lower }}</td>
                                <td>{{ identite.lieu | lower }}</td>
                                <td>{{ identite.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
                                
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}